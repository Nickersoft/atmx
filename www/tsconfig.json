{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["unplugin-icons/types/react"]
  },
  "exclude": ["src/snippets/**/*", "dist/**/*"],
  "mdx": {
    // Enable strict type checking in MDX files.
    "checkMdx": true
  }
}
